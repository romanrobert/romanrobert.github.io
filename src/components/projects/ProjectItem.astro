---
import projects from "../../projectsData";
import Button from "../Button.astro";

---



<section class="projects">

    <div class="left">
        <div class="img-wrapper">
            
        </div>
    </div>
    <ul class="project-list">
        {
            projects.map((project) => (
            <img src=`${project.coverImage}` alt="project cover image" />
                <li class="project-item">
                     
                    <div class="project-info">
                        <h2 class="project-title">{project.title}</h2>
                        <ul class="project-tehcnologies">
                            {
                                project.technologies.slice(0, 3).map((tech) => (
                                    <li class="tech">{tech}</li>
                                ))
                            }
                        </ul>
                    </div>
                    
                    <Button
                        type="button",
                        href={`/project/${project.title.toLowerCase().replaceAll(" ", "-")}`};
                    > 
                        See Project
                    </Button>
                </li>
            ))
        }
    </ul>
</section>

<style>

    li {
        list-style: none;
    }

    h2 {
        letter-spacing: -2px;
    }

    .projects {
        display: flex;
        gap: 1rem;
    }

    .left {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        max-width: 50%;
    }

    .project-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        flex-grow: 1;
        margin-top: 6.25rem;
    }

    .project-item {
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
        border-bottom: 1px solid #737577;
        padding-bottom: 2rem;
    }

    .project-tehcnologies {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem

}

img {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 50%;
    height: 65vh;
    aspect-ratio: 1/1;
    opacity: 0;
    transition: opacity 500ms ease;
    object-fit: cover;
    border-radius: 0rem 4rem 0rem 0rem;
}

li:hover .project-list img {
    opacity: 1;
}
</style>